<%= form_with(model: content, local: true, class: 'form') do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= hidden_field_tag :id, 'Content ID:' %>
    <%= form.hidden_field :id, :value => @content.next_id %>
    <div class="upload-btn-wrapper">
      <button class="btn">Select a file</button>
      <%= form.file_field :file %>
    </div>
    <strong><%= form.label :public, ' Public Access? ' %></strong>
    <%= form.check_box :public %>
    <%= form.submit "Upload", :class=>"button" %>
  </div>
<% end %>
