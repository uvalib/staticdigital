<%= form_with(model: content, local: true) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= hidden_field_tag :id, 'Content ID:' %>
    <%= form.hidden_field :id, :value => @content.next_id %>
  </div>

  <div class="field">
    <%= form.label :public, 'Public Access? ' %>
    <%= form.check_box :public %>
    <br />
  </div>

  <div class="field">
    <%= form.label :file, 'Select Your File: ' %>
    <%= form.file_field :file %>
    <br />
  </div>

  <div class="actions">
    <%= form.submit "Upload" %>
  </div>
<% end %>
